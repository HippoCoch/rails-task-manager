

<div class="container">
  <div class="row">
    <div class="col">
    <%= simple_form_for @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <% if !f.object.new_record? %>
        <%= f.label :completed %>
        <%= f.check_box :completed %>
      <% end %>
      <%= f.submit value="Update task" %>
    <% end %>
    </div>
  </div>
</div>

